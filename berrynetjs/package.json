{
  "name": "BerryNet",
  "version": "2.0.0",
  "description": "Deep learning gateway on Raspberry Pi",
  "main": "index.js",
  "author": "DT42",
  "license": "GPLv3",
  "dependencies": {
    "@line/bot-sdk": "^1.0.0",
    "ascoltatori": "^3.1.0",
    "emailjs": "^1.0.8",
    "git-cz": "^4.7.0",
    "husky": "^4.2.5",
    "imagemagick": "^0.1.3",
    "imgur": "^0.2.1",
    "lint-staged": "^10.2.11",
    "mocha": "^3.2.0",
    "mosca": "^2.2.0",
    "mqtt": "^2.0.1",
    "opencv": "^6.0.0",
    "pino": "^2.13.0",
    "prompt": "^1.0.0",
    "request": "^2.79.0"
  },
  "devDependencies": {
    "eslint": "^6.5.1",
    "eslint-config-google": "^0.7.1"
  },
  "scripts": {
    "test": "pytest --cov=project --cov-fail-under=30 --cov-report=term-missing tests",
    "commit": "git-cz",
    "check": "lint-staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "pip freeze | safety check --full-report --stdin"
    }
  },
  "lint-staged": {
    "**/*.py": [
      "isort -rc -y -ac -ls",
      "black --skip-string-normalization",
      "mypy --ignore-missing-imports",
      "bandit",
      "git add"
    ],
    "**/Dockerfile*": [
      "hadolint"
    ]
  }
}
